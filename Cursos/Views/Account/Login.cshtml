@using Cursos.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="login-page">
    <!-- Logos arriba del contenedor -->
    <div class="login-logos">
        <img src="~/images/logos/CSL_logo_main_h.png" alt="CSL Certificaciones" />
        <img src="~/images/logos/UPM_logo_main_h.png" alt="UPM The Biofore Company" />
    </div>

    <!-- Contenedor principal del formulario -->
    <div class="login-card">
        <div class="login-header">
            <h2>Iniciar sesión</h2>
        </div>

        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger login-validation-summary" })

                <div class="login-field">
                    <label for="Email">
                        <i class="fa fa-envelope-o"></i> @Html.DisplayNameFor(m => m.Email)
                    </label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-input", placeholder = "nombre@ejemplo.com", autocomplete = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="login-field">
                    <label for="Password">
                        <i class="fa fa-lock"></i> @Html.DisplayNameFor(m => m.Password)
                    </label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control login-input", placeholder = "Contraseña", autocomplete = "current-password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="login-remember">
                    <label class="login-checkbox-label">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        <span>@Html.DisplayNameFor(m => m.RememberMe)</span>
                    </label>
                </div>

                <button type="submit" class="btn login-btn">
                    <i class="fa fa-sign-in"></i> Iniciar sesión
                </button>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}