    @Scripts.Render("~/Scripts/multiLanguaje.js")
    <script>
        $(function () {
            $(".jqueryui-marker-datepicker").datepicker({
                dateFormat: "dd/mm/yy",
                changeYear: true,
                showOn: "button"
            }).css("display", "inline-block")
                .next("button").button({
                    icons: { primary: "ui-icon-calendar" },
                    label: "Seleccionar una fecha",
                    text: false
                });
        });

        $(document).ready(function () {
            var lang = MultiLanguage.Cookies.getCookie("LangForCursos");
            $(".setLang[data-lang='" + lang + "'] img").addClass("active-lang");

            $(".setLang").on("click", function (event) {
                var lang = $(this).attr("data-lang");
                MultiLanguage.Cookies.setCookie("LangForCursos", lang, 30);
                location.reload(true);
            });

            // Ajustar dinámicamente el padding-top del body según la altura del navbar
            function adjustBodyPadding() {
                var navbarHeight = $('.navbar-fixed-top').outerHeight();
                $('body').css('padding-top', navbarHeight + 'px');
            }

            // Ejecutar al cargar la página
            adjustBodyPadding();

            // Ejecutar cuando cambie el tamaño de la ventana
            $(window).resize(function() {
                adjustBodyPadding();
            });

            // Ejecutar cuando se colapsa/expande el navbar en móviles
            $('.navbar-toggle').on('click', function() {
                setTimeout(adjustBodyPadding, 300); // Delay para esperar la animación
            });
        });
    </script>
